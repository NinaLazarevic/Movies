      <ul>
        <% movie.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :caption %>
    <%= form.text_field :caption, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :release_year %>
    <%= form.text_field :release_year, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.label :picture_path %>
    <%= form.text_field :picture_path, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :user_id, id: :movie_user_id, value: current_user.id, type: :hidden %>
  </div>
  <br/>
  <div class="actions">
    <%= form.submit class:"btn btn-secondary" %>
  </div>
