<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Caption</th>
      <th>Release year</th>
      <th>Rating</th>
      <th>Picture path</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.caption, movie %></td>
        <td><%= movie.release_year %></td>
        <td><%= movie.rating %></td>
        <td><a href=<%= movie.picture_path %> target="_blank">See picture</a></td>   
        <td><%= link_to 'Delete', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path, class: "btn btn-secondary" %>
